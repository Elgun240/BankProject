@model List<AboutUs>
@{
    ViewData["Title"] = "Index";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">AboutUs</h4>

            <div class="table-responsive">
                <table id="myTable" class="table table-hover">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Image</th>

                            <th>Subtitle</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (AboutUs item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>
                                    <img src="~/img/@item.Image" style="width:400px;height:150px;object-fit:cover;border-radius:10px" />
                                </td>

                                <td>@item.Description</td>


                                <td>
                                    <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-success">Update</a>
                                    <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-warning">Detail</a>
                                </td>

                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}






