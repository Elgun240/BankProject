@model List<Compaign>
@{
    ViewData["Title"] = "Index";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Compaign</h4>
            <a asp-action="Create" class="btn btn-primary">Create</a>
            <div class="table-responsive">
                <table id="myTable" class="table table-hover">
                    <thead>
                        <tr>

                            <th>Image</th>
                            <th>Title</th>
                            <th>Subtitle</th>
                            <th>Description</th>
                            <th>Create Time</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Compaign item in Model)
                        {
                        <tr>

                            <td>
                                <img src="~/img/@item.Image" style="width:150px;height:150px;object-fit:cover;border-radius:10px" />
                            </td>
                            <td>@item.Title</td>
                            <td>@item.Subtitle</td>
                            <td>@item.Description</td>
                            <td>@item.CreatedTime</td>
