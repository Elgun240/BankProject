@model List<Credit>
@{
    ViewData["Title"] = "Index";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Credits</h4>
            <a asp-action="Create" class="btn btn-primary">Create</a>
            <div class="table-responsive">
                <table id="myTable" class="table table-hover">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Image</th>
                            <th>Title</th>
                            <th>Subtitle</th>
                            <th>Description</th>
                            <th>Customers Count</th>
                            <th>Status</th>

                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (Credit item in Model)
                        {
                        <tr>
                            <td>@item.Id</td>
                            <td>
                                <img src="~/admin/images/@item.Image" style="width:100px;height:100px;object-fit:cover;border-radius:10px" />
                            </td>
                            <td>@item.Title</td>
                            <td>@item.Subtitle</td>
                            <td>@item.Description</td>
                            <td>@item.Customers.Count</td>
                            <td>
                                @if (item.IsDeactive)
                                {
                                    <span class="text-danger">Deactive</span>
                                }
                                else
                                {
                                    <span class="text-success">Active</span>
                                }
                            </td>

                            <td>
                                @if (item.IsDeactive)
                                {
                                    <a asp-action="Activity" asp-route-id="@item.Id" class="btn btn-secondary">Activate</a>
                                }
                                else
                                {
                                    <a asp-action="Activity" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                                }

                               
                                <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-success">Update</a>
                            </td>
                            

                            <td>
                                
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>
    $(document).ready(function () {
        $('#myTable').DataTable();
    });
    </script>
}


