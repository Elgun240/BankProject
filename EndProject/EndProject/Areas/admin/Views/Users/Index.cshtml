@model List<UserVM>
@{
    ViewData["Title"] = "Index";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Users</h4>
            
            <div class="table-responsive">
                <table id="myTable" class="table table-hover">
                    <thead>
                        <tr>


                            <th>Name</th>
                            <th>Surname</th>
                            <th>Username</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Status</th>

                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (UserVM item in Model)
                        {
                            <tr>


                                <td>@item.Name</td>
                                <td>@item.Surname</td>
                                <td>@item.Username</td>
                                <td>@item.Email</td>
                                <td>@item.Role</td>

                                <td>
                                    @if (item.IsDeactive)
                                    {
                                        <span class="text-danger">Deactive</span>
                                    }
                                    else
                                    {
                                        <span class="text-success">Active</span>
                                    }
                                </td>

                                <td>
                                    @if (User.Identity.Name != item.Username)
                                    {
                                        @if (item.IsDeactive)
                                        {
                                            <a asp-action="Activity" asp-route-id="@item.Id" class="btn btn-secondary">Activate</a>
                                        }
                                        else
                                        {
                                            <a asp-action="Activity" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                                        }
                                        <a asp-action="ChangeRole" asp-route-id="@item.Id" class="btn btn-inverse-primary">Change Role</a>
                                        <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-warning">Detail</a>
                                    }


                                </td>
                                <td>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}







