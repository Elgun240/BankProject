@model News
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">

<div class="container">
    <div class="card">
        <div class="card-body">

            <div class="row">
                <div class="col-6">
                    <div class="divimg" style="margin:auto; width:500px; height:500px">
                        <img src="~/img/@Model.Image" style="width:100%; height:100%" />
                    </div>
                </div>
              
                <div class="col-6">
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <h3 class="box-title mt-5">General Info</h3>
                        <div class="table-responsive">
                            <table class="table table-striped table-product">
                                <tbody>
                                    <tr>
                                        <td width="390">Title</td>
                                        <td>@Model.Title</td>
                                    </tr>
                                    <tr>
                                        <td>Subtitle </td>
                                        <td>@Model.Subtitle</td>
                                    </tr>
                                    <tr>
                                        <td>Created Time</td>
                                        <td>@Model.CreateTime</td>
                                    </tr>


                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            
            </div>
        </div>
    </div>
</div>