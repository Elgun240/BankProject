@model List<Position>
@{
    ViewData["Title"] = "Index";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Positions</h4>
            <a asp-action="Create" class="btn btn-primary">Create</a>
            <div class="table-responsive">
                <table id="myTable" class="table table-hover">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                           
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                   
                        @foreach (Position item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                

                                <td>
                                    <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-warning">Detail</a>
                                    <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-success">Update</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@section Scripts{ 
<script>
    $(document).ready(function () {
        $('#myTable').DataTable();
    });
    </script>
}


